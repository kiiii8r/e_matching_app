<%= render "shared/contents-header" %>

<div class='main-contents'>
  <div class='notice-page'>
    <h3 class="text-center">通知</h3>

    <%= link_to notification_path(@notifications), method: :delete do %>

      <p style="color: black;">全削除</p>
        
    <% end %>
        
      <hr>

    <div class="contents">

      <% if @notifications.present? %>

          <div class="notice-contents">
                
            <%= render partial: "notification", collection: @notifications %>
            
          </div>

      <% else %>

          <p>通知はありません</p>

      <% end %>

    </div>
  </div>
</div>

<%= render "shared/contents-footer" %>