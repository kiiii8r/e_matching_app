<%= render "shared/contents-header" %>

    
    <div class='account-page user-form'>
      <%= form_with model: @profile, url: user_profile_path(params[:user_id]), local: true do |f| %>

      <div class="img-upload">
      <div class="weight-bold-text">
        出品画像
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"user-image" %>
      </div>
    </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"></label>
          <span class="indispensable">紹介文</span>
        </div>
        <%= f.text_field :introduction, class:"input-default", id:"introduction", placeholder:"記入欄" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"></label>
          <span class="indispensable">趣味</span>
        </div>
        <%= f.text_field :hobby, class:"input-default", id:"hobby", placeholder:"記入欄" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"></label>
          <span class="indispensable">目的</span>
        </div>
        <%= f.text_field :target, class:"input-default", id:"target", placeholder:"記入欄" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">都道府県</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">主な使用言語１</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:language1_id, Language1.all, :id, :name, {}, {class:"select-box", id:"language1"}) %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">主な使用言語２</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:language2_id, Language2.all, :id, :name, {}, {class:"select-box", id:"language2"}) %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">主な使用言語３</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:language3_id, Language3.all, :id, :name, {}, {class:"select-box", id:"language3"}) %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"></label>
          <span class="indispensable"></span>
        </div>
        <%= f.text_field :other_language, class:"input-default", id:"other_language", placeholder:"その他使用言語" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"></label>
          <span class="indispensable">主な役割</span>
        </div>
        <%= f.collection_select(:role_id, Role.all, :id, :name, {}, {class:"select-box", id:"role"}) %>
      </div>

       <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"></label>
          <span class="indispensable">長所</span>
        </div>
        <%= f.text_field :pros, class:"input-default", id:"pros", placeholder:"記入欄" %>
      </div>
        
       <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text"></label>
          <span class="indispensable">短所</span>
        </div>
        <%= f.text_field :defect, class:"input-default", id:"defect", placeholder:"記入欄" %>
      </div>
        
     <div class='buy-btn'>
      <%= f.submit "編集" ,class:"buy-red-btn" %>
    </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/contents-footer" %>