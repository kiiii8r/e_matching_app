<div class="chat-header">
  <div class="left-header">
    <div class="header-partner">

      <%= @partner.nickname %>さん

    </div>
  </div>

  <div class="right-header">
    <div class="header-button">
    
      <%= link_to "チャットを終了する", user_path(@partner.id) %>

    </div>
  </div>
</div>

<div class="messages", id="scroll_end">

  <%= render partial: 'message', collection: @messages %>

</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>

  <div class='chat-footer'>
    <div class="form-input">

      <%= f.text_field :message, class: 'form-message', placeholder: 'type a message' %>

      <%= f.submit 'メッセージ送信', class: 'form-submit' %>

      <div class="form-image">
        <span class="image-file">画像添付：</span>

        <%= f.file_field :image, class: 'hidden' %>
  
      </div>

      <%= f.hidden_field :partner_id, value: @partner.id %>

     </div>
  </div>

<% end %>