<div class="message">
  <div class="message-user">

    <% if message.user_id == @user.id %>

      <div class="my-message">
        <div class="right-message">
          <div class="message-contents">
            <%= message.message %>
          </div>
            <%= image_tag message.image.variant(resize:'300x300'), class: 'message-image' if message.image.attached? %>
        </div>
      </div>

    <% else %>

      <div class="partner-message">
        <div class="partner-image">
          <%if @partner.profile.image.present? %> 
            <%= image_tag @partner.profile.image.variant(gravity: :center, resize:"50x50^", crop:"50x50+0+0"), class:"partner-img" if @partner.profile.image.attached? %>
          <% elsif @partner.gender == "male" %>
            <%= image_tag 'mens_silhouette.png', size: "50x50", class: "user-img" %>
          <% else %>
            <%= image_tag 'radies_silhouette.png', size: "50x50", class: "user-img" %>
          <% end %>
        </div>

        <div class="left-message">
          <div class="message-content">
            <%= message.message %>
          </div>
          <%= image_tag message.image.variant(resize:'300x300'), class: 'message-image' if message.image.attached? %>
        </div>
      </div>

    <% end %>

  </div>
</div>