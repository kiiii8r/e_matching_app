<%= render "shared/contents-header" %>

<h1>
  ユーザー検索
</h1>
<%= search_form_for @p, url: users_search_path do |f| %>
  <%= f.label :gender_eq, '性別' %>
  <%= f.collection_select :gender_eq, @users_gender, :gender, :gender,  include_blank: '指定なし' %>
  <br>
  <%= f.label :role_eq, '役割：' %>
    <%= f.collection_select :role_id._eq, @profile_size, :size, :size, include_blank: '指定なし'%>
    <br>
    <%= f.label :status_eq, '商品状態：' %>
    <%= f.collection_select :status_eq, @product_status, :status, :status, include_blank: '指定なし'%>
    <br>
    <%= f.label :category_name_eq, 'カテゴリー：' %>
    <%= f.collection_select :category_name_eq, @category_name, :name, :name, include_blank: '指定なし' %>
    <br>
  <%= f.submit '検索' %>
<% end %>

 <div class='user-contents'>
    <h2 class='title'>ユーザー一覧</h2>
    <ul class='user-lists'>

    
      <% @users.each do |user| %>

      <% unless current_user.id == user.id%>

      <li class='list'>
        <%= link_to user_path(user.id) do %>
        <div class='user-img-content'>

        <%if user.profile.image.present? %>

          <%= image_tag user.profile.image.variant(resize:'300x300'), class: "user-img" if user.profile.image.attached? %>

        <% elsif user.gender == "male" %>

           <%= image_tag 'mens_silhouette.png', size: "300x300", class: "user-img" %>

        <% else %>

           <%= image_tag 'radies_silhouette.png', size: "300x300", class: "user-img" %>

        <% end %>

        </div>
        <div class='user-info'>
          <h3 class='user-name'>
            <%= user.nickname %>
          </h3>
          <div class='user-language'>
            <span><%= user.profile.language1.name %>言語</span>
            <span><%= user.profile.language2.name %>言語</span>
            <span><%= user.profile.language3.name %>言語</span>
          </div>
            <div class='user-role'>
            <%= user.profile.role.name %>
            </div>
            <div class='star-btn'>
              <%# <%= image_tag "star.png", class:"star-icon" %> %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>

        <% end %>
      <% end %>

<%= render "shared/contents-footer" %>